<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.online.chargingSystem.mapper.ChargingQueueMapper">
    <resultMap id="BaseResultMap" type="com.online.chargingSystem.entity.ChargingQueue">
        <id column="id" property="id"/>
        <result column="car_id" property="carId"/>
        <result column="request_id" property="requestId"/>
        <result column="queue_type" property="queueType"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, car_id, request_id, queue_type, status, create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.online.chargingSystem.entity.ChargingQueue">
        INSERT INTO charging_queue (
            car_id, request_id, queue_type, status, create_time, update_time
        ) VALUES (
            #{carId}, #{requestId}, #{queueType}, #{status}, NOW(), NOW()
        )
    </insert>

    <update id="update" parameterType="com.online.chargingSystem.entity.ChargingQueue">
        UPDATE charging_queue
        SET status = #{status},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <select id="findById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM charging_queue
        WHERE id = #{id}
    </select>

    <select id="findByCarId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM charging_queue
        WHERE car_id = #{carId}
    </select>

    <select id="findByRequestId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM charging_queue
        WHERE request_id = #{requestId}
    </select>

    <select id="findByQueueTypeAndStatus" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM charging_queue
        WHERE queue_type = #{queueType} AND status = #{status}
    </select>

    <select id="findWaitingQueues" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM charging_queue
        WHERE status = 'WAITING'
    </select>

    <update id="updateStatus">
        UPDATE charging_queue
        SET status = #{status},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM charging_queue
        WHERE id = #{id}
    </delete>
</mapper> 